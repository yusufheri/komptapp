{% extends 'base.html.twig' %}

{% block title %}Detail importation!{% endblock %}

{% block stylesheets %}
    {#<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">#}
    
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.21/af-2.3.5/b-1.6.2/b-colvis-1.6.2/b-flash-1.6.2/b-html5-1.6.2/b-print-1.6.2/r-2.2.5/sl-1.3.1/datatables.min.css"/>
    <style>
        td.highlight {
            background-color: whitesmoke !important;
        }
    </style>
{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 mt-5">
            {% set extension  = importFile.displayName %}
            <i class="mt-5 ml-5 fa  {% if 'csv' in importFile.filename  %} fa-file-text-o {% else  %}fa-file-excel-o {% endif %} fa-6 ml-5" aria-hidden="true" style="font-size: 10em;margin-right: .07142857em;"></i>
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-12"><h3 class="h3">Nom du  fichier : {{ importFile.displayName }} (<span id="count"></span>)</h3></div>
                <div class="col-md-12"><h3 class="h3 text-info">Période du {{ importFile.fromAt | date('Y-m-d') }} au {{ importFile.toAt | date('Y-m-d') }} ({{ importFile.createdAt | date('Y-m-d H:i') }})</h3></div>
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md"><h3 class="h3 text-success">{{ importFile.detailImports | filter(v => v.error is null ) |length }} ligne(s) avec succès</h3></div>
                        <div class="col-md"><h3 class="h3 text-danger float-left">{{ importFile.detailImports | filter(v => v.error is not null ) |length }} ligne(s) avec erreur</h3></div>
                    </div>
                </div>  
                
            </div>
        </div>
    </div>
    <hr>
    {# {% include "import/_datatable.html.twig" %} #}
    <div class="container-fluid mt-2 mb-5">
        <table class="table table-hover table-bordered" id="example">
            <thead>
                <tr >
                    <th class="text-bold">N°</th>
                    <th class="text-bold">Date</th>
                    <th class="text-bold">no_event</th>
                    <th class="text-bold">Motif</th>
                    <th class="text-bold">Noms</th>
                    <th>Section</th>
                    <th class="text-bold">Montant</th>
                    <th class="text-bold">Devise</th>
                </tr>
            </thead>
            <tfoot>
                <tr >
                    <th class="text-bold">N°</th>
                    <th class="text-bold">Date</th>
                    <th class="text-bold">no_event</th>
                    <th class="text-bold">Motif</th>
                    <th class="text-bold">Noms</th>
                    <th>Section</th>
                    <th class="text-bold">Montant</th>
                    <th class="text-bold">Devise</th>
                </tr>
            </tfoot>
        </table>
    </div>

</div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.21/af-2.3.5/b-1.6.2/b-colvis-1.6.2/b-flash-1.6.2/b-html5-1.6.2/b-print-1.6.2/r-2.2.5/sl-1.3.1/datatables.min.js"></script>
    <script>
    $(document).ready(function(){
        var url = window.location.href.split('/')
        var id = url[url.length-1];
        var baseurl = "/import/"+id+"/datatable";
        var xmlhttp = new XMLHttpRequest();
        xmlhttp.open("GET",baseurl,true);
        xmlhttp.onreadystatechange = function(){
    		if(xmlhttp.readyState==4 && xmlhttp.status ==200){
                var data = JSON.parse(xmlhttp.responseText);
                $("#count").html(data.length)
                //console.log(data)
                var table = $("#example").DataTable({
                    "language": {
                        "decimal":        "",
                        "emptyTable":     "<h1>Aucune donnée disponible</h1>",
                        "info":           "Afficher _START_ à _END_ sur _TOTAL_ ligne(s)",
                        "infoEmpty":      "Afficher 0 à 0 sur 0 ligne(s)",
                        "infoFiltered":   "(<b>Filtré de _MAX_ ligne(s) au total</b>)",
                        "infoPostFix":    "",
                        "thousands":      ",",
                        "lengthMenu":     "Afficher _MENU_ lignes",
                        "loadingRecords": "Chargement...",
                        "processing":     "Traitement en cours...",
                        "search":         "Recherche:",
                        "zeroRecords":    "<h2>Aucun enregistrements correspondants trouvés</h2>",
                        "paginate": {
                            "first":      "Premier",
                            "last":       "Dernier",
                            "next":       "Suivant",
                            "previous":   "Précédent"
                        },
                        "aria": {
                            "sortAscending":  ": activate to sort column ascending",
                            "sortDescending": ": activate to sort column descending"
                        }
                    },
                    responsive: true,
                    autoFill: true,
                    data:data,
                    "createdRow": function( row, data, dataIndex ) {
                        if(data.error == true) {
                            $(row).addClass( 'text-danger' );
                        }
                        /*var amount = data.montant;
                        if (amount  < 350000) { //amount.replace(/[\$,]/g, '') * 1 
                            $('td', row).eq(6).addClass('text-danger text-center');     
                        } else {
                            $('td', row).eq(6).addClass('important  text-center')                            
                        }*/
                        $('td', row).eq(6).addClass('important  text-right')
                        $('td', row).eq(6).addClass('highlight');            
                    },
                    "columns":[
                        {"data":"id"},
                        {"data":"datePaid"},
                        {"data":"event_no"},
                        {"data":"motif"},
                        {"data":"name"},
                        {"data":"section"},
                        {"data":"montant"},
                        {"data":"devise"}
                    ],
                    /*dom: 'Bfrtip',
                    buttons: [
                        'copy', 'excel', 'pdf'
                    ]*/                   
                    
                });

                $("#example tfoot th").each(function() {
                    var title = $(this).text();
                    $(this).html('<input type="text" class="form-control" placeholder="' + title +'"/>');
                });

                table.columns().every(function(){
                    var that = this;
                    $('input', this.footer()).on('keyup change', function() {
                        if(that.search !== this.value){
                            that.search(this.value).draw();
                        }
                    })
                });

                //table.buttons().container().appendTo( $('.col-sm-3:eq(0)', table.table().container() ) );

                /*$('#example tbody').on( 'mouseenter', 'td', function () {
                    var colIdx = table.cell(this).index().column;
        
                    $( table.cells().nodes() ).removeClass( 'highlight' );
                    $( table.column( colIdx ).nodes() ).addClass( 'highlight' );
                } );
                */
                

    		}
    	};
    	xmlhttp.send();
        

        
      });
    </script>
{% endblock %}
