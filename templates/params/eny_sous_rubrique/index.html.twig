{% extends 'base.html.twig' %}

{% block title %}Gestion de comptes::KomptApp{% endblock %}

{% block stylesheets %}    
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.21/af-2.3.5/b-1.6.2/b-colvis-1.6.2/b-flash-1.6.2/b-html5-1.6.2/b-print-1.6.2/r-2.2.5/sl-1.3.1/datatables.min.css"/>
    <style>
        td.highlight {
            background-color: whitesmoke !important;
        }
    </style>
{% endblock %}

{% block body %}
{% include "home/partials/page-bar.html.twig" with {title : "Gestion des sous-rubriques", bigTitle: "Gestion des sous-rubriques"  } %}
    
<div class="container-fluid">
    <div class="row">
            <div class="col-md-12">
                <div class="card card-box" id="datatable">
                    <div class="card-head">
                        <header>Liste des sous rubriques déjà créées (<span id="count">0</span> au total)</header>
                        <button class="btn btn-circle btn-primary float-right" data-toggle="modal" id="addCpte">
                            <i class="fa fa-plus-circle" aria-hidden="true"></i> Nouveau compte
                        </button>                      
                    </div>
                    <div class="card-body">
                        <div class="table-wrap">
                            <div class="table-responsive">
                                <table class="table table-hover table-bordered" id="example">
                                    <thead>
                                        <tr>
                                            <td width="4%"></td>
                                            <td width="1%"></td>
                                            <td width="15%">Enregistré</td>
                                            <td width="15%">Codes</td>
                                            <td width="50%">Libellé</td>
                                            <td width="10%"></td>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <td width="4%"></td>
                                            <td width="1%"></td>
                                            <td width="15%">Enregistré</td>
                                            <td width="20%">Codes</td>
                                            <td width="50%">Libellé</td>
                                            <td width="10%"></td>
                                        </tr>
                                    </tfoot>                                
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

<div class="modal fade" id="FormCompte" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content modalCompte" id="infoBox">            
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.21/af-2.3.5/b-1.6.2/b-colvis-1.6.2/b-flash-1.6.2/b-html5-1.6.2/b-print-1.6.2/r-2.2.5/sl-1.3.1/datatables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.27.0/moment.min.js"></script>  
    <script src="{{ asset('assets/js/params/srubrique.js') }} "></script>
{% endblock %}

