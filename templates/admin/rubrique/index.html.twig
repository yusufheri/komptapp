{% extends 'base.html.twig' %}

{% block title %}Gestion des Rubriques::KomptApp{% endblock %}

{% block stylesheets %}    
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.21/af-2.3.5/b-1.6.2/b-colvis-1.6.2/b-flash-1.6.2/b-html5-1.6.2/b-print-1.6.2/r-2.2.5/sl-1.3.1/datatables.min.css"/>
    <style>
        td.highlight {
            background-color: whitesmoke !important;
        }
    </style>
{% endblock %}

{% block body %}
{% include "home/partials/page-bar.html.twig" with {title : "Gestion des rubriques", bigTitle: "Gestion  des rubriques (création et modification)"  } %}
    
<div class="container-fluid">
    <div class="row">
            <div class="col-md-12">
                <div class="card card-box" id="datatable">
                    <div class="card-head">
                        <header>Liste des rubriques déjà créées (<span id="count">0</span> au total)</header>  
                        <a href="{{ path('admin_rubrique_create') }}" class="btn btn-circle btn-primary float-right" data-toggle="modal" >
                            <i class="fa fa-plus-circle" aria-hidden="true"></i> Nouvelle rubrique 
                        </a>                      
                    </div>
                    <div class="card-body">
                        <div class="table-wrap">
                            <div class="table-responsive">
                                <table class="table table-hover table-bordered" id="example">
                                    <thead>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td width="10%">Enregistré</td>
                                            <td width="8%">Codes</td>
                                            <td width="37%">Libellé</td>
                                            <td width="28%">Montant</td>
                                            <td width="16%">Comptes</td>
                                            <td width="6%"></td>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td width="10%">Enregistré</td>
                                            <td width="8%">Codes</td>
                                            <td width="37%">Libellé</td>
                                            <td width="28%">Montant</td>
                                            <td width="16%">Comptes</td>
                                            <td width="6%"></td>
                                        </tr>
                                    </tfoot>                                
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>

<!-- Modal 1-->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title h1" id="exampleModalLongTitle">Création d'une rubrique</h3>
        <button class="btn blue-bgcolor btn-outline btn-circle m-b-10"> <i class="fa fa-close"  data-dismiss="modal" aria-label="Close"></i> </button>
               
      </div>
      <div class="modal-body modalCenter1">
        {# {% include "admin/rubrique/new.html.twig" with {devises: devises} %} #}
      </div>
    </div>
  </div>
</div>
<!-- Modal 1-->

<!-- Modal 2-->
<div class="modal fade" id="exampleModalCenter2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content modalCenter2">            
        </div>
    </div>
</div>
<!-- Modal 2-->

<!-- Modal 3-->
<div class="modal fade" id="exampleModalCenter3" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content modalCenter3"></div>
    </div>
</div>
<!-- Modal 3-->
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.21/af-2.3.5/b-1.6.2/b-colvis-1.6.2/b-flash-1.6.2/b-html5-1.6.2/b-print-1.6.2/r-2.2.5/sl-1.3.1/datatables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.27.0/moment.min.js"></script>  
    
    <script src="{{ asset('assets/js/dashboard/rubrique.js') }} "></script>
{% endblock %}

